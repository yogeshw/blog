<article class="blog-post">
    <div class="container">
        <header class="post-header">
            <h1>{{post.title}}</h1>
            <div class="post-meta">
                <span class="post-date">{{formatDate post.date}}</span>
                {{#if post.readingTime}}<span class="reading-time">{{post.readingTime}}</span>{{/if}}
            </div>
        </header>

        {{#if post.coverImage}}
        <div class="post-featured-image">
            <img src="{{post.coverImage}}" alt="{{post.title}}">
        </div>
        {{/if}}

        <div class="post-content">
            {{{post.content}}}
        </div>

        {{#if post.tags.length}}
        <div class="post-tags">
            <h4>Topics:</h4>
            <div class="tags">
                {{#each post.tags}}
                <a href="/blog/tag/{{this}}" class="tag">{{this}}</a>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>
</article>

<section class="post-navigation">
    <div class="container">
        <div class="navigation-links">
            <a href="/blog" class="btn-tertiary">‚Üê Back to Blog</a>
        </div>
    </div>
</section>

<section class="related-posts">
    <div class="container">
        <h2 class="section-title">You Might Also Enjoy</h2>
        <!-- Related posts would be dynamically added here -->
        <div class="view-all">
            <a href="/blog" class="btn-secondary">View All Posts</a>
        </div>
    </div>
</section>